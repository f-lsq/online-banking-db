{{#extends 'base'}}

{{#block 'title'}}Customers{{/block}}

{{#block 'content'}}
<header class='mt-3 mb-3'>
  <h1>All Customers</h1>
  <div style="display: flex">
    <a href='create-customers' class='btn btn-warning me-5'>Add a New Customer</a>
    <form method='POST' style="display: flex">
      <input type='text' name='searchTerm' class='form-control me-1' placeholder='Search for Customer'/>
      <input type='submit' value='Search' class='btn btn-secondary'/>
    </form>
  </div>
</header>
<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>Name</th>
      <th>Date of Birth</th>
      <th>Gender</th>
      <th>Contact Number</th>
      <th>Email</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    {{#each customers}}
    <tr>
      <td>{{this.customerId}}</td>
      <td>{{this.name}}</td>
      <td>{{this.dateOfBirth}}</td>
      <td>{{this.gender}}</td>
      <td>{{this.contactNumber}}</td>
      <td>{{this.email}}</td>
      <td>
        <a href="/accounts/{{this.customerId}}" class="btn btn-primary">View</a>
      </td>
      <td>
        <a href="/update-customers/{{this.customerId}}" class="btn btn-success">Edit</a>
      </td>
      <td>
        <a href="/delete-customers/{{this.customerId}}" class="btn btn-danger">Delete</a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>
{{/block}}

{{/extends}}